<h1>Listing records</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Actions</th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.title %></td>
    <td>
      <%= link_to 'Show', record %> |
      <%= link_to 'Edit', edit_record_path(record) %> |
      <%= link_to 'Delete', record, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>

<% end %>
</table>

<br />

<%= link_to 'New Record', new_record_path %>
